{
    "name": "larasync/scrapper",
    "description": "Larasync Scrapper",
    "type": "library",
    "require": {
        "nesk/puphpeteer": "^1.6"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Aissa",
            "email": "aissa.aouli@gmail.com"
        }
    ],
    "autoload": {
        "classmap": [
            "database/migrations"
        ],
        "psr-4": {
            "Larasync\\Scrapper\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "laravel": {
            "providers": [
                "Larasync\\Scrapper\\ScrapperServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-update-cmd": "npm update",
        "post-install-cmd": [
            "npm install @nesk/puphpeteer"
        ],
        "post-autoload-dump": [
            "php artisan vendor:publish --tag=scrapper",
            "npm install @nesk/puphpeteer"
        ]
    }
}
